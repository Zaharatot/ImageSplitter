<UserControl x:Class="SplitterSimpleUI.Content.Controls.Panels.MainMenuPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SplitterSimpleUI.Content.Controls.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="50">
    <!-- Основной стиль рамки -->
    <Border Style="{StaticResource Style_PanelBorder}">
        <!-- Основная панель контролла -->
        <StackPanel x:Name="MainPanel" Orientation="Vertical" Grid.Row="0" />
    </Border>
</UserControl>
