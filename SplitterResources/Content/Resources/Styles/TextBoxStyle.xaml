<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Стиль прозрачного поля ввода текста -->
    <Style x:Key="Style_TextBox_Transparent" TargetType="TextBox">
        <Setter Property="Padding" Value="5" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource Brush_ForegroundColor}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SelectionBrush" Value="{StaticResource Brush_ActiveColor}" />
        <Setter Property="CaretBrush" Value="{StaticResource Brush_ActiveColor}" />
    </Style>

</ResourceDictionary>