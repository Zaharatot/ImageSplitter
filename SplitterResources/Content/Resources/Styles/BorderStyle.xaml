<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Стиль рамки -->
    <Style x:Key="Style_Border" TargetType="Border">
        <Setter Property="Margin" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="Background" Value="{DynamicResource Brush_PanelBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush_BordersColor}" />
    </Style>
    
    <!-- Стиль рамки для всплывающего сообщения -->
    <Style x:Key="Style_Border_Popup" TargetType="Border">
        <Setter Property="Opacity" Value="0" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Background" Value="{DynamicResource Brush_ActiveColor}" />
    </Style>


    <!-- Стиль рамки на панели -->
    <Style x:Key="Style_PanelBorder" TargetType="Border">
        <Setter Property="Margin" Value="1" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{DynamicResource Brush_PanelBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush_BordersColor}" />
    </Style>

</ResourceDictionary>