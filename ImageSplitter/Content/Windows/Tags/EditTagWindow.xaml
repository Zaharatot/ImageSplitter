<Window x:Class="ImageSplitter.Content.Windows.Tags.EditTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSplitter.Content.Windows.Tags"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Окно редактирования тега" Height="120" Width="240">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <!-- Панель параметров тега -->
        <StackPanel>
            <!-- Имя тега -->
            <TextBlock Text="Имя тега:" />
            <TextBox x:Name="TagNameTextBox" />
        </StackPanel>
        <!-- Кнопка сохранения изменений -->
        <Button x:Name="SaveChangesButton" Content="Сохранить изменения"
                Click="SaveChangesButton_Click"
                HorizontalAlignment="Right" Padding="10, 0" Grid.Row="2" Margin="5, 10" />
    </Grid>
</Window>
