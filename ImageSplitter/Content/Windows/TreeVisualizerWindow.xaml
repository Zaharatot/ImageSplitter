<Window xmlns:Simple="clr-namespace:ImageSplitter.Content.Controls.Simple"  
        x:Class="ImageSplitter.Content.Windows.TreeVisualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSplitter.Content.Windows"
        mc:Ignorable="d" WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush_PanelBackgroundColor}"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="TreeVisualizerWindow" Height="600" Width="450" Padding="50">
    <!-- Основная панель -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Панель древа -->
        <TreeView x:Name="TreePanel" Style="{StaticResource Style_TreeView}" Margin="5" Padding="5" HorizontalContentAlignment="Center" />
        <!-- Кнопка обновления -->
        <Button Name="UpdatePanelButton" Content="{StaticResource Text_TreeVisualizerPanel_UpdateButton}" 
                Style="{StaticResource Style_Button}" Grid.Row="1" Click="UpdatePanelButton_Click" />
    </Grid>
</Window>
