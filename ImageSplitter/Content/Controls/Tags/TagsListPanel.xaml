<UserControl x:Class="ImageSplitter.Content.Controls.Tags.TagsListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSplitter.Content.Controls.Tags"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <!-- Обводка для контролла -->
    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- Кнопка добавления тега -->
            <Button x:Name="AddTagButton" Content="Добавить тег" 
                    Grid.Row="0" Margin="5" Click="AddTagButton_Click" />
            <!-- Скролл для панели тегов -->
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="TagsPanel" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
