<UserControl x:Class="ImageSplitter.Content.Controls.ImageSplit.FolderListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSplitter.Content.Controls.ImageSplit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="330">
    <Border Margin="10" Padding="10" Background="White" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0" Margin="0,10">
                <!-- Панель списка папок -->
                <ScrollViewer>
                    <StackPanel x:Name="FoldersList" />
                </ScrollViewer>
            </Border>
            <!-- Кнопка добавления папки -->
            <Button x:Name="AddFolderButton" Content="Добавить папку (Ctrl+N)" 
                        Grid.Row="1" Height="30" Click="AddFolderButton_Click"  />
        </Grid>
    </Border>
</UserControl>
