<UserControl x:Class="ImageSplitter.Content.Controls.ImageSplit.FolderListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSplitter.Content.Controls.ImageSplit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="330">
    <Border Margin="10" Padding="10" Style="{StaticResource Style_Border}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- РАмка для спска элементов -->
            <Border Style="{StaticResource Style_PanelBorder}" Grid.Row="0" Margin="0,10">
                <!-- Панель списка папок -->
                <ScrollViewer Style="{StaticResource Style_ScrollViewer}">
                    <StackPanel x:Name="FoldersList" />
                </ScrollViewer>
            </Border>
            <!-- Кнопка добавления папки -->
            <Button x:Name="AddFolderButton" Content="Добавить папку (Ctrl+N)" Margin="0"
                    Style="{StaticResource Style_Button}" Grid.Row="1" Click="AddFolderButton_Click" Cursor="Hand"  />
        </Grid>
    </Border>
</UserControl>
