<UserControl x:Class="ImageSplitter.Content.Controls.ImageSplit.Folders.FolderInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSplitter.Content.Controls.ImageSplit.Folders"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <!-- Основной текстовый блок -->
    <TextBlock VerticalAlignment="Center" Margin="5" FontSize="15">
        <Run x:Name="CountChildsRun" Background="{StaticResource Brush_DoneColor}" Text="[0]" />
        <Run x:Name="FolderNameRun" Text="[FolderName]" Foreground="{StaticResource Brush_ForegroundColor}" />
    </TextBlock>
</UserControl>
