    <!-- Кисти -->

    <!-- Основные цвета темы -->
    <SolidColorBrush x:Key="Brush_ControlBackgroundColor" Color="#F3EEEA" />
    <SolidColorBrush x:Key="Brush_DeepBackgroundColor" Color="#B0A695" />
    <SolidColorBrush x:Key="Brush_PanelBackgroundColor" Color="#EBE3D5" />
    <SolidColorBrush x:Key="Brush_TransparentBackgroundColor" Color="#88776B5D" />

    <SolidColorBrush x:Key="Brush_ActiveColor" Color="#354a6e" />
    <SolidColorBrush x:Key="Brush_BordersColor" Color="#2b3c59" />
    <SolidColorBrush x:Key="Brush_DisabledActiveColor" Color="#476394" />


    <SolidColorBrush x:Key="Brush_ForegroundColor" Color="#202c42" />
    <SolidColorBrush x:Key="Brush_PlaceholderForegroundColor" Color="#202c42" Opacity="0.7" />
    <SolidColorBrush x:Key="Brush_ActiveForegroundColor" Color="#F3EEEA" />


    <!-- Цвета для статусов -->
    <SolidColorBrush x:Key="Brush_DoneColor" Color="#3fc476" />
    <SolidColorBrush x:Key="Brush_FailColor" Color="#c43f81" />


    <!-- Цвета -->
    <Color x:Key="Color_ActiveColor" A="255" R="53" G="74" B="110" />
